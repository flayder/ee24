%section.section
  / section__header
  .section__header
    .section__title.title
      %span.title__text= link_to 'Фотографии', galleries_path, style: 'text-decoration: none;'
  .section__main
    .carousel
      .carousel__list
        - @photo_galleries.each do |gallery|
          .carousel__item
            .carousel__media{:style => "background-image: url('#{@img_domain}#{gallery.main_photo.image.url(:xlarge)}');"}