- nofolow= %w(about user_agreement partners)
%footer#footer.footer
  .container
    / footer__nav
    .footer__widgets.widgets
      .widgets__groups
        .row
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title ССЫЛКИ
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                %nav.widget__nav.nav
                  - if block = FooterBlock.where(identity: 'links').first
                    = raw block.content
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title НАШИ ПРОЕКТЫ
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                %nav.widget__nav.nav
                  - if block = FooterBlock.where(identity: 'projects').first
                    = raw block.content
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title ДЛЯ КОМПАНИЙ
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                %nav.widget__nav.nav
                  - if block = FooterBlock.where(identity: 'companies').first
                    = raw block.content
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title СОЦСЕТИ
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                %nav.widget__nav.nav
                  / - if block = FooterBlock.where(identity: 'social').first
                  /   = raw block.content
                  %ul.nav__list
                    %li.nav__item
                      %a.nav__link{:href => "https://www.facebook.com/420on.cz"} Facebook
                    %li.nav__item
                      %a.nav__link{:href => "https://instagram.com/420oncz"} Instagram
                    %li.nav__item
                      %a.nav__link{:href => "https://www.youtube.com/user/420oncz"} Youtube
                    %li.nav__item
                      %a.nav__link{:href => "https://t.me/cz420"} Telegram
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title компании
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                %nav.widget__nav.nav
                  - @site.catalog_rubrics.roots.order('position, title').first(8).each do |company|
                    %li.nav__item
                      %a.nav__link{:href => company.url}= company.title
          .col.col_2.col_desktop-3.col_tab-6.col_mob-12
            .widgets__widget.widget
              .widget__header.header
                %span.header__title СВЯЗАТЬСЯ С НАМИ
                %svg.header__ico{:fill => "none", :height => "8", :viewbox => "0 0 13 8", :width => "13", :xmlns => "http://www.w3.org/2000/svg"}
                  %path{:d => "M1.16212 4.90695e-07L8.0848e-08 1.22022L6.5 8L13 1.21337L11.8379 6.18002e-07L6.5 5.57326L1.16212 4.90695e-07Z", :fill => "white"}
              .widget__content
                .wysiwyg
                  %p 420on s.r.o.
                  %p info@420on.cz
                  %p +420 777 299 799
                  %p Churchill I., Italská 2581/67, 120 00 Praha Česká republika
    / footer__content
