= link_to 'Новая категория', new_admin_category_path

%table.table.table-bordered
  %thead
    %th= Category.human_attribute_name :id
    %th= Category.human_attribute_name :name
    %th= Category.human_attribute_name :description
    %th= 'Действия'
  - @categories.each do |category|
    %tr
      %td= category.id
      %td= category.name
      %td= category.description
      %td
        %ul.admin_actions      
          %li= link_to 'Редактировать', edit_admin_category_path(category)
          %li= link_to 'Удалить', admin_category_path(category), :method => :delete, :confirm => 'Вы уверены?'

=# will_paginate_bootstrap @categories