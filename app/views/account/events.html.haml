%div
  .l-wrapper
    .l-page__columns-line
      .l-section__main.l-r-important
        %div.l-section__main
          - if @events.present?
            .b-tag__content
              .l-cols.js-loaderByPage
                - @events.in_groups_of(3).transpose.each_with_index do |slice_news, index|
                  .l-cols-3.l-l{class: "col#{index+1}"}
                    = render partial: 'shared/article', collection: slice_news, as: 'article'
            = will_paginate_new @events
          - else
            .g-info
              .g-info__text= is_my_profile?(@user) ? "У вас ещё нет событий." : "У пользователя нет событий."
      .l-section__aside.l-l
        = render 'account/templates/blocks/aside', user: @user
